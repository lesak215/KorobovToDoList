<Window x:Class="KorobovToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KorobovToDoList"
        mc:Ignorable="d"
        Title="MainWindow" Height="425" Width="765">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="55,116,0,0" TextWrapping="Wrap" 
            Name ="NewTaskTextBox"
            Text="Введите задачу..." 
            VerticalAlignment="Top" 
                 Width="226" Height="24"/>
        <DatePicker HorizontalAlignment="Left" Margin="55,68,0,0" VerticalAlignment="Top" 
                    Name="DueDatePicker"
                    Width="226" Height="24"/>
        <Label Content="Выберите дату и введите задачу:" 
               HorizontalAlignment="Left" 
               Height="34" Width="226"
               Margin="55,10,0,0" 
               VerticalAlignment="Top" 
               FontSize="14"/>
        <Button Content="Добавить задачу" HorizontalAlignment="Left" 
                Name ="AddButton"
                Margin="55,205,0,0" VerticalAlignment="Top" 
                Height="34" Width="226" Cursor="Hand"/>
        <Button Content="Удалить задачу" HorizontalAlignment="Left"
                Name="DelButton"
                Margin="55, 255, 0, 0" VerticalAlignment="Top"
                Height="34" Width="226" Cursor="Hand"/>
        <Button Content="Изменить задачу" HorizontalAlignment="Left"
                Name ="CorButton" 
                Margin="55, 310, 0, 0" VerticalAlignment="Top"
                Height="34" Width="226" Cursor="Hand" IsDefault="True"/>
        <Label Content="Выберите действие:" HorizontalAlignment="Left" Margin="55,160,0,0" 
               VerticalAlignment="Top" 
               Height="34" Width="226"/>
        <ListBox d:ItemsSource="{Binding}" 
                 Margin="350,35,35,35"/>
    </Grid>
</Window>
