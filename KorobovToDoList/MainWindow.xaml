        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KorobovToDoList"
        mc:Ignorable="d"
        Title="MainWindow" Height="425" Width="765">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="55,116,0,0" TextWrapping="Wrap" 
            Name ="NewTaskTextBox"
            Text="Введите задачу..." 
            VerticalAlignment="Top" 
                 Width="226" Height="24"/>
        <DatePicker HorizontalAlignment="Left" Margin="56,68,0,0" VerticalAlignment="Top" 
                    Name="DueDatePicker"
                    Width="226" Height="24"/>
        <Label Content="Выберите дату и введите задачу:" 
               HorizontalAlignment="Left" 
               Height="34" Width="226"
               Margin="56,10,0,0" 
               VerticalAlignment="Top" 
               FontSize="14"/>
    </Grid>
</Window>
