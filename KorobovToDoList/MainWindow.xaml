<Window x:Class="KorobovToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KorobovToDoList"
        mc:Ignorable="d"
        Title="ToDoList by korobov" Height="425" Width="765">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="55,116,0,0" TextWrapping="Wrap" 
                Name ="NewTaskTextBox"
                Text="Введите задачу..." 
                VerticalAlignment="Top" 
                Width="226" Height="24"/>
        <DatePicker HorizontalAlignment="Left" 
                Margin="55,68,0,0" VerticalAlignment="Top" 
                Name="DueDatePicker"
                Width="226" Height="24"/>
        <Label  Content="Выберите дату и введите задачу:" 
                HorizontalAlignment="Left" 
                Height="34" Width="226"
                Margin="55,10,0,0" 
                VerticalAlignment="Top" 
                FontSize="14"/>
        <Button Content="Добавить задачу" HorizontalAlignment="Left" 
                Name ="AddButton"
                Click="AddButton_Click"
                Margin="55,205,0,0" VerticalAlignment="Top" 
                Height="34" Width="226" Cursor="Hand"/>
        <Button Content="Удалить задачу" HorizontalAlignment="Left"
                Name="DelButton"
                Click="DelButton_Click"
                Margin="55, 255, 0, 0" VerticalAlignment="Top"
                Height="34" Width="226" Cursor="Hand"/>
        <Button Content="Изменить задачу" HorizontalAlignment="Left"
                Name ="CorButton"
                Click="CorButton_Click"
                Margin="55, 310, 0, 0" VerticalAlignment="Top"
                Height="34" Width="226" Cursor="Hand" IsDefault="True"/>
        <Label Content="Выберите действие:" HorizontalAlignment="Left" Margin="55,160,0,0" 
               VerticalAlignment="Top" 
               Height="34" Width="226"/>
        <ListBox Name="TasksList" 
             Margin="350,35,35,35"
             Background="White"
             BorderBrush="LightGray"
             BorderThickness="1"
             ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border 
                    BorderBrush="#FFE0E0E0" 
                    BorderThickness="0,0,0,1" 
                    Padding="10,8">
                        <StackPanel Orientation="Horizontal">

                            <CheckBox IsChecked="{Binding IsCompleted}" 
                             VerticalAlignment="Center"
                             Margin="0,0,12,0"/>


                            <StackPanel>
                                <TextBlock Text="{Binding Title}" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"/>

                                <TextBlock Text="{Binding DueDate, StringFormat='Срок: {0:dd.MM.yyyy}'}" 
                                  FontSize="12" 
                                  Foreground="Gray"
                                  Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFE8F4FD"/>
                            <Setter Property="BorderBrush" Value="#FF0078D7"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFF0F0F0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>
