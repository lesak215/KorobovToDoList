<Window x:Class="KorobovToDoList.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KorobovToDoList"
        mc:Ignorable="d"
        Title="Редактирование задачи" Height="240" Width="545"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button 
            Name = "EditSaveButton"
            Content="Сохранить" 
            HorizontalAlignment="Left" 
            Margin="20,160,0,0" 
            Width="226" Height="34"
            VerticalAlignment="Top"
            Cursor="Hand"
            Click="EditSaveButton_Click"/>
        <Button 
            Name = "EditCancelButton"
            Content="Отменить" 
            HorizontalAlignment="Right" 
            Margin = "0,160, 20,0"
            Width = "226" Height = "34"
            VerticalAlignment="Top"
            Cursor = "Hand"
            Click = "EditCancelButton_Click"
            />
        <DatePicker
            Name = "EditDatePiker"
            HorizontalAlignment="Center" 
            Margin="0,99,0,0" 
            Width="226"
            VerticalAlignment="Top"/>
        <Label 
            Content="Введите новые данные:" 
            HorizontalAlignment="Center" 
            Margin="0,19,0,0" 
            VerticalAlignment="Top"/>
        <TextBox
            Name = "EditTextBox"
            HorizontalAlignment="Center" 
            Margin="0,59,0,0" 
            TextWrapping="Wrap" 
            Text="Введите измененную задачу..." 
            VerticalAlignment="Top" 
            Width="226"/>

    </Grid>
</Window>
